{
  "name": "hdckit",
  "version": "0.9.0",
  "description": "A pure Node.js client for the OpenHarmony Device Connector",
  "main": "dist/index.js",
  "files": [
    "dist",
    "uitestkit_sdk/*.so"
  ],
  "scripts": {
    "ci": "npm run lint && npm run build",
    "dev": "tsc -w",
    "build": "tsc",
    "format": "lsla prettier \"src/**/*.ts\" \"test/**/*.js\" \"*.js\" --write",
    "lint": "eslint \"src/**/*.ts\""
  },
  "keywords": [
    "hdc"
  ],
  "author": "surunzi",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.8",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "dependencies": {
    "execa": "^5.1.1",
    "licia": "^1.47.0"
  }
}
